<script>
  $(document).ready(() => {
    $composeModal = $('#compose-modal')
    $composeForm = $('#compose-form')

    $composeModal.on('click', '#compose-form-submit', (e) => {
      e.preventDefault()
      const formData = new FormData($composeForm[0])

      axios({
        method: 'POST',
        url: '/api/my-posts',
        data: formData
      }).then(() => {
        window.location.href = '/'
      }).catch((err) => {
        switch (err.response.status) {
          case 406: {
            // run
            const { response: { data: { errors } } } = err
            $composeModal.find('.invalid-feedback').empty()
            $composeModal.find('.is-invalid').removeClass('is-invalid')
            // run
            errors.forEach((error) => {
              // run 4 times
              const { param: fieldName, msg} = error
              const $input = $composeModal.find(`[name="${fieldName}"]`)
              const $invalidFeedback = $input.siblings('.invalid-feedback')
              $input.addClass('is-invalid')
              $invalidFeedback.text(msg)
              // run 4 times


            })
            break;
          }

          default: {
            // not run when submitting the compose form
            console.log(err.response);
            break;
          }
        }
      })
    })
  })
</script>

<div id="compose-modal" class="modal fade" tabindex="-1">
  <div class="modal-dialog modal-dialog-centered modal-lg">
    <div class="modal-content">

      <div class="modal-header">
        <h5 class="modal-title">Compose</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form id="compose-form" novalidate>
          <div class="form-group">
            <label>Title</label>
            <input class="form-control" type="text" name="postTitle">
            <div class="invalid-feedback"></div>
          </div>
          <div>
            <label class="mt-3">Content</label>
            <textarea class="form-control" name="postContent" rows="5" cols="30"></textarea>
            <div class="invalid-feedback"></div>
          </div>

        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-warning" data-bs-dismiss="modal">Close</button>
        <button id="compose-form-submit" type="button" class="btn btn-primary" data-url="/api/my/posts" data-method="POST">Publish</button>
      </div>

    </div>
  </div>
</div>
