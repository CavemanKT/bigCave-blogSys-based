<div id="compose-modal" class="modal fade" tabindex="-1">
  <div class="modal-dialog modal-dialog-centered modal-lg">
    <div class="modal-content">

      <div class="modal-header">
        <h5 class="modal-title">Compose</h5>
        <button type="button" class="close" data-dismiss="modal"><span>&times;</span></button>
      </div>
      <div class="modal-body">
        <form class="compose-form" novalidate>
          <div class="form-group">
            <label>Title</label>
            <input class="form-control" type="text" name="postTitle">
            <div class="invalid-feedback"></div>
            <label class="mt-3">Content</label>
            <textarea class="form-control" name="postContent" rows="5" cols="30"></textarea>
            <div class="invalid-feedback"></div>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-warning" data-dismiss="modal">Close</button>
        <button id="compose-form-submit" type="button" class="btn btn-primary" data-url="/api/my/posts" data-method="POST">Publish</button>
      </div>

    </div>
  </div>
</div>
